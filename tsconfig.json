{
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": ["svelte", "node", "@sapper"],
    "rootDir": "./src",
    "typeRoots": ["typings", "./node_modules/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "Node"
  }
}
